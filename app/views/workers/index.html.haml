%table 
  %tr
    %th
      ПІБ
    %th
      Посада
    %th
      Логін
  - @workers.each do |worker|
    %tr
      %td
        = worker.pib
      %td
        = worker.posada
      %td
        = worker.login
      %td 
        = link_to "Редагувати", edit_worker_path(worker.id)
      %td
        = link_to "Видалити", worker_path(worker.id), method: :delete, data: { confirm: "Ви впевнені?" }

= link_to "Додати", new_worker_path