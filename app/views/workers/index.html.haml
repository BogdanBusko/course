= form_tag workers_path, method: :get do 
  = text_field_tag :search, params[:search], placeholder: "Search Posts"
  = submit_tag "Search" 
%table 
  %tr
    %th
      = sortable "pib", "ПІБ"
    %th
      = sortable "posada", "Посада"
    %th
      = sortable "login", "Логін"
  - @workers.each do |worker|
    %tr
      %td
        = worker.pib
      %td
        = worker.posada
      %td
        = worker.login
      %td 
        = link_to "Редагувати", edit_worker_path(worker.id)
      %td
        = link_to "Видалити", worker_path(worker.id), method: :delete, data: { confirm: "Ви впевнені?" }

= link_to "Додати", new_worker_path